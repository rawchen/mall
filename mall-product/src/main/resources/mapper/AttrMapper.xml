<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- pms_attr 商品属性 -->
<mapper namespace="com.rawchen.mall.product.mapper.AttrMapper">

	<resultMap id="entityResultMap" type="com.rawchen.mall.product.entity.Attr">
		<result property="attrId" column="attr_id"/>
		<result property="attrName" column="attr_name"/>
		<result property="searchType" column="search_type"/>
		<result property="valueType" column="value_type"/>
		<result property="icon" column="icon"/>
		<result property="valueSelect" column="value_select"/>
		<result property="attrType" column="attr_type"/>
		<result property="enable" column="enable"/>
		<result property="catelogId" column="catelog_id"/>
		<result property="showDesc" column="show_desc"/>
		<result property="createTime" column="create_time"/>
		<result property="updateTime" column="update_time"/>
	</resultMap>

	<sql id="allColumnFiled">
		`attr_id`,
		`attr_name`,
		`search_type`,
		`value_type`,
		`icon`,
		`value_select`,
		`attr_type`,
		`enable`,
		`catelog_id`,
		`show_desc`,
		`create_time`,
		`update_time`
	</sql>

	<!-- 查询 -->
	<select id="get" resultMap="entityResultMap">
		SELECT 
		<include refid="allColumnFiled"/>
		FROM pms_attr
		WHERE attr_id = #{attrId}
	</select>

	<!-- 查询列表 -->
	<select id="findList" resultMap="entityResultMap" parameterType="com.rawchen.mall.product.entity.Attr">
		SELECT
		<include refid="allColumnFiled"/>
		FROM pms_attr
		<where>
			<if test="attrId!=null ">
				AND attr_id like concat('%',concat(#{attrId},'%'))
			</if>
			<if test="attrName!=null and attrName!=''">
				AND attr_name like concat('%',concat(#{attrName},'%'))
			</if>
			<if test="searchType!=null ">
				AND search_type like concat('%',concat(#{searchType},'%'))
			</if>
			<if test="valueType!=null ">
				AND value_type like concat('%',concat(#{valueType},'%'))
			</if>
			<if test="icon!=null and icon!=''">
				AND icon like concat('%',concat(#{icon},'%'))
			</if>
			<if test="valueSelect!=null and valueSelect!=''">
				AND value_select like concat('%',concat(#{valueSelect},'%'))
			</if>
			<if test="attrType!=null ">
				AND attr_type like concat('%',concat(#{attrType},'%'))
			</if>
			<if test="enable!=null ">
				AND enable like concat('%',concat(#{enable},'%'))
			</if>
			<if test="catelogId!=null ">
				AND catelog_id like concat('%',concat(#{catelogId},'%'))
			</if>
			<if test="showDesc!=null ">
				AND show_desc like concat('%',concat(#{showDesc},'%'))
			</if>
			<if test="createTime!=null ">
				AND create_time like concat('%',concat(#{createTime},'%'))
			</if>
			<if test="updateTime!=null ">
				AND update_time like concat('%',concat(#{updateTime},'%'))
			</if>
		</where>
	</select>

	<!-- 保存 -->
	<insert id="insert" parameterType="com.rawchen.mall.product.entity.Attr">
		INSERT INTO pms_attr
 			(<include refid="allColumnFiled"/>)
		VALUES 
 			(#{attrId}, #{attrName}, #{searchType}, #{valueType}, #{icon}, #{valueSelect}, #{attrType}, #{enable}, #{catelogId}, #{showDesc}, #{createTime}, #{updateTime})
	</insert>

	<!-- 更新 -->
	<update id="update" parameterType="com.rawchen.mall.product.entity.Attr">
		UPDATE pms_attr
		SET 
			<if test="attrName!=null and attrName!=''">
				attr_name = #{attrName}
,			</if>
			<if test="searchType!=null ">
				search_type = #{searchType}
,			</if>
			<if test="valueType!=null ">
				value_type = #{valueType}
,			</if>
			<if test="icon!=null and icon!=''">
				icon = #{icon}
,			</if>
			<if test="valueSelect!=null and valueSelect!=''">
				value_select = #{valueSelect}
,			</if>
			<if test="attrType!=null ">
				attr_type = #{attrType}
,			</if>
			<if test="enable!=null ">
				enable = #{enable}
,			</if>
			<if test="catelogId!=null ">
				catelog_id = #{catelogId}
,			</if>
			<if test="showDesc!=null ">
				show_desc = #{showDesc}
,			</if>
			<if test="createTime!=null ">
				create_time = #{createTime}
,			</if>
			<if test="updateTime!=null ">
				update_time = #{updateTime}
			</if>
		WHERE 
			attr_id = #{attrId}
	</update>

	<!-- 删除 -->
	<delete id="delete">
		delete from pms_attr where attr_id = #{attrId}
	</delete>

</mapper>
