<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- pms_attr_attrgroup_relation 属性&属性分组关联 -->
<mapper namespace="com.rawchen.mall.product.mapper.AttrAttrgroupRelationMapper">

	<resultMap id="entityResultMap" type="com.rawchen.mall.product.entity.AttrAttrgroupRelation">
		<id property="id" column="id" />
		<result property="attrId" column="attr_id"/>
		<result property="attrGroupId" column="attr_group_id"/>
		<result property="attrSort" column="attr_sort"/>
		<result property="createTime" column="create_time"/>
		<result property="updateTime" column="update_time"/>
	</resultMap>

	<sql id="allColumnFiled">
		`id`,
		`attr_id`,
		`attr_group_id`,
		`attr_sort`,
		`create_time`,
		`update_time`
	</sql>

	<!-- 查询 -->
	<select id="get" resultMap="entityResultMap">
		SELECT 
		<include refid="allColumnFiled"/>
		FROM pms_attr_attrgroup_relation
		WHERE id = #{id}
	</select>

	<!-- 查询列表 -->
	<select id="findList" resultMap="entityResultMap" parameterType="com.rawchen.mall.product.entity.AttrAttrgroupRelation">
		SELECT
		<include refid="allColumnFiled"/>
		FROM pms_attr_attrgroup_relation
		<where>
			<if test="id!=null ">
				AND id like concat('%',concat(#{id},'%'))
			</if>
			<if test="attrId!=null ">
				AND attr_id like concat('%',concat(#{attrId},'%'))
			</if>
			<if test="attrGroupId!=null ">
				AND attr_group_id like concat('%',concat(#{attrGroupId},'%'))
			</if>
			<if test="attrSort!=null ">
				AND attr_sort like concat('%',concat(#{attrSort},'%'))
			</if>
			<if test="createTime!=null ">
				AND create_time like concat('%',concat(#{createTime},'%'))
			</if>
			<if test="updateTime!=null ">
				AND update_time like concat('%',concat(#{updateTime},'%'))
			</if>
		</where>
	</select>

	<!-- 保存 -->
	<insert id="insert" parameterType="com.rawchen.mall.product.entity.AttrAttrgroupRelation">
		INSERT INTO pms_attr_attrgroup_relation
 			(<include refid="allColumnFiled"/>)
		VALUES 
 			(#{id}, #{attrId}, #{attrGroupId}, #{attrSort}, #{createTime}, #{updateTime})
	</insert>

	<!-- 更新 -->
	<update id="update" parameterType="com.rawchen.mall.product.entity.AttrAttrgroupRelation">
		UPDATE pms_attr_attrgroup_relation
		SET 
			<if test="attrId!=null ">
				attr_id = #{attrId}
,			</if>
			<if test="attrGroupId!=null ">
				attr_group_id = #{attrGroupId}
,			</if>
			<if test="attrSort!=null ">
				attr_sort = #{attrSort}
,			</if>
			<if test="createTime!=null ">
				create_time = #{createTime}
,			</if>
			<if test="updateTime!=null ">
				update_time = #{updateTime}
			</if>
		WHERE 
			id = #{id}
	</update>

	<!-- 删除 -->
	<delete id="delete">
		delete from pms_attr_attrgroup_relation where id = #{id}
	</delete>

</mapper>
